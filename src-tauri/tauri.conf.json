{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gnosis VPN",
  "identifier": "org.hoprnet.gnosisvpn",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Gnosis VPN",
        "width": 360,
        "height": 640,
        "resizable": false,
        "visible": false
      },
      {
        "label": "settings",
        "title": "Gnosis VPN settings",
        "width": 640,
        "height": 768,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "resources": ["icons/tray-icon.png"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
